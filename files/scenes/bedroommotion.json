{
    "name": "bedroom_motion",
    "type": "automatic",
    "on": [
      {
        "cmd": "check",
        "args": {
          "if": ["time", "<>", "22:00", "7:00"],
          "then": [{"cmd": "device", "args": {"cmd": "write", "sid": "0x000000000545b741", "data": {"set_power":  "on"}}},
                   {"cmd":  "sleep", "args": 30},
                   {"cmd": "device", "args": {"cmd": "write", "sid": "0x000000000545b741", "data": {"set_power":  "off"}}}
                  ]
        }
      }
    ]
  }